{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "exactOptionalPropertyTypes": false,
    "moduleResolution": "bundler",
    /* This tells TS to ignore errors in files it's not explicitly looking at */
    "checkJs": false
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules", "**/*.test.ts"]
}
